[OSEv3:vars]

###########################################################################
### Ansible Vars
###########################################################################
timeout=60
ansible_become=yes
ansible_ssh_user=ec2-user

# disable memory check, as we are not a production environment
openshift_disable_check="memory_availability"

# Set this line to enable NFS
openshift_enable_unsupported_configurations=True


###########################################################################
### OpenShift Hosts
###########################################################################
[OSEv3:children]
lb
masters
etcd
nodes
nfs
#glusterfs

[lb]
loadbalancer1.65de.internal

[masters]
master1.65de.internal
master2.65de.internal
master3.65de.internal

[etcd]
master1.65de.internal
master2.65de.internal
master3.65de.internal

[nodes]
## These are the masters
master1.65de.internal openshift_hostname=master1.65de.internal  openshift_node_labels="{'env': 'master', 'cluster': '65de'}"
master2.65de.internal openshift_hostname=master2.65de.internal  openshift_node_labels="{'env': 'master', 'cluster': '65de'}"
master3.65de.internal openshift_hostname=master3.65de.internal  openshift_node_labels="{'env': 'master', 'cluster': '65de'}"

## These are infranodes
infranode1.65de.internal openshift_hostname=infranode1.65de.internal  openshift_node_labels="{'env':'infra', 'cluster': '65de'}"
infranode2.65de.internal openshift_hostname=infranode2.65de.internal  openshift_node_labels="{'env':'infra', 'cluster': '65de'}"

## These are regular nodes
node1.65de.internal openshift_hostname=node1.65de.internal  openshift_node_labels="{'env':'app', 'cluster': '65de'}"
node2.65de.internal openshift_hostname=node2.65de.internal  openshift_node_labels="{'env':'app', 'cluster': '65de'}"
node3.65de.internal openshift_hostname=node3.65de.internal  openshift_node_labels="{'env':'app', 'cluster': '65de'}"
node4.65de.internal openshift_hostname=node4.65de.internal  openshift_node_labels="{'env':'app', 'cluster': '65de'}"

## These are CNS nodes
# support1.65de.internal openshift_hostname=support1.65de.internal  openshift_node_labels="{'env':'glusterfs', 'cluster': '65de'}"

[nfs]
support1.65de.internal openshift_hostname=support1.65de.internal

